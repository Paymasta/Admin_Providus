}

<style>
    .centerBox {
        top: 35%;
    }

    .manageBox .leftTitle, .manageBox .desc {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .manageCategory .manageBox .desc {
        color: #130F26;
        font: 600 16px/22px OpenSans-SemiBold;
        width: calc(100% - 180px);
        margin-bottom: 0px;
        border: none;
    }

    .manageCategory .manageBox .proDesc {
        max-width: 380px;
        padding: 0px;
        border: none;
        border-bottom: 1px solid lightgrey;
        font-weight: 600;
        font-size: 16px;
    }
</style>

<link href="~/Content/css/texteditorCss/TextEditor.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
<script src="~/Content/js/ManageArticle/SaveArticle.js"></script>

<div class="backButton">
    <img class="" src="~/Content/images/arrow-left.png" id="backImng" />
    Manage Article / <span class="viewDesc">Save Article </span>
</div>

<div class="manageCategory">

    <div class="manageBox d-flex">
        <div class="col-xs-2 col-sm-2 col-md-2 leftTitle">Article Content</div>
        <textarea id="txtArticleText" class="col-xs-10 col-sm-10 col-md-10"></textarea>
        <span class="form-validations-error" id="txtArticleTextError"></span>
    </div>

    <div class="manageBox d-flex">
        <div class="col-xs-2 col-sm-2 col-md-2 leftTitle">Price Money</div>
        <textarea class="col-xs-8 col-sm-8 col-md-8" id="txtPriceMoney"></textarea>
        <span class="form-validations-error" id="txtPriceMoneyError"></span>
    </div>

    <div class="manageBox d-flex">
        <input type="radio" id="option1" name="options" value="1">
        <div class="col-xs-2 col-sm-2 col-md-2 leftTitle">Option 1</div>
        <textarea class="col-xs-8 col-sm-8 col-md-8" id="txtOption1Text"></textarea>
        <span class="form-validations-error" id="txtOption1TextError"></span>
    </div>

    <div class="manageBox d-flex">
        <input type="radio" id="option2" name="options" value="2">
        <div class="col-xs-2 col-sm-2 col-md-2 leftTitle">Option 2</div>
        <textarea class="col-xs-8 col-sm-8 col-md-8" id="txtOption2Text"></textarea>
        <span class="form-validations-error" id="txtOption2TextError"></span>
    </div>

    <div class="manageBox d-flex">
        <input type="radio" id="option3" name="options" value="3">
        <div class="col-xs-2 col-sm-2 col-md-2 leftTitle">Option 3</div>
        <textarea class="col-xs-8 col-sm-8 col-md-8" id="txtOption3Text"></textarea>
        <span class="form-validations-error" id="txtOption3TextError"></span>
    </div>

    <div class="manageBox d-flex">
        <input type="radio" id="option4" name="options" value="4">
        <div class="col-xs-2 col-sm-2 col-md-2 leftTitle">Option 4</div>
        <textarea class="col-xs-8 col-sm-8 col-md-8" id="txtOption4Text"></textarea>
        <span class="form-validations-error" id="txtOption4TextError"></span>
    </div>

    <div class="manageBox flexAlign">

        <div class="">
            <button class="btnEdit btnDelete btnSecond" id="btnCancel">Cancel</button>
            <button class="btnEdit btnSecond" id="btnSaveArticle">Save</button>
        </div>
    </div>
</div>