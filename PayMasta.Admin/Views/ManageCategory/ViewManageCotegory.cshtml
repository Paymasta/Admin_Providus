    ViewBag.Title = "Bill and Payments";
}

<style>
    .centerBox {
        top: 35%;
    }

    .manageBox .leftTitle, .manageBox .desc {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .manageCategory .manageBox .desc {
        color: #130F26;
        font: 600 16px/22px OpenSans-SemiBold;
        width: calc(100% - 180px);
        margin-bottom: 0px;
        border: none;
    }
    .proDesc
    {
        display:none;
    }
    .btnSecond {
        display: none;
    }
    
</style>
<script src="~/Content/js/ManageRequest/viewCategory.js"></script>
<div class="backButton">
    <img class="" src="~/Content/images/arrow-left.png" id="backImg"/>
    Manage Category / <span class="viewDesc">Edit </span>
</div>

<div class="manageCategory">
    <div class="manageBox d-flex">
        <p class="leftTitle">Category</p>
        <p class="desc" id="category_name"></p>
        <input type="text" class="proDesc" id="catName" pattern="^[A-Za-z -]+$" maxlength="50"/>
