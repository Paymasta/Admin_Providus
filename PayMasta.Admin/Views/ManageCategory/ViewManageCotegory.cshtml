            <input type="text" placeholder="Lorem Ipsum" />
        </div>*@
    </div>
    <div class="manageBox d-flex">
        <p class="leftTitle">Sub-Category</p>
        <p class="desc" id="subcategory_name"></p>
        <input type="text" class="proDesc" id="sub_catName" pattern="^[A-Za-z -]+$" maxlength="50" />

        <input type="text" class="desc" />

    </div>
