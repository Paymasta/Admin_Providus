<style>
    .centerBox {
        top: 35%;
    }

    .manageBox .leftTitle, .manageBox .desc {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .manageCategory .manageBox .desc {
        color: #130F26;
        font: 600 16px/22px OpenSans-SemiBold;
        width: calc(100% - 180px);
        margin-bottom: 0px;
        border: none;
    }

    .manageCategory .manageBox .proDesc {
        max-width: 380px;
        padding: 0px;
        border: none;
        border-bottom: 1px solid lightgrey;
        font-weight: 600;
        font-size: 16px;
    }

  

    
</style>
