<div class="manageCategory">
    <div class="manageBox d-flex">
        <div class="col-xs-2 col-sm-2 col-md-2 leftTitle">Category</div>
        <input type="text" class="proDesc col-xs-12 col-sm-6 col-md-6" id="catName" maxlength="30" />
    </div>

    <div class="manageBox d-flex">
        <div class="col-xs-2 col-sm-2 col-md-2 leftTitle">Sub-Category</div>
        <input type="text" class="proDesc col-xs-12 col-sm-6 col-md-6" id="sub_catName" maxlength="30" />
    </div>

