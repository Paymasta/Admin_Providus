
@{
    ViewBag.Title = "Early Wage Access";
}

<link href="~/Content/css/early-wage-user.css" rel="stylesheet" />

<div class="main_div">

    <div class="drop_down">
        <div class="drop_select">
            <span class="status-text">Status</span>
            <select name="cars" id="ddlStatus">
                <option value="-1">Status </option>
                <option value="1">Active </option>
                <option value="0">Inactive </option>
                @*<option value="2">Pending </option>*@
              
            </select>
        </div>
        <div class="date_option">
            <div class="date_from">
                From
                <span style="position: relative">
                    <input type="text" class="to_date to_date" placeholder="MM/DD/YYYY" id="txtFromDate">
                    <i class="fa fa-calendar-check-o calender" aria-hidden="true" id="calender_from"></i>
                </span>
                <div>
                    <span id="fromdateError" style="color:red"></span>
                </div>

            </div>

            <div class="date_from">
                <span>TO</span>
                <span style="position: relative">
                    <input type="text" class="to_date" placeholder="MM/DD/YYYY" id="txtEnddate">
                    <i class="fa fa-calendar-check-o calender" aria-hidden="true" id="calender_to"></i>
                </span>
                <div>
                    <span id="TodateError" style="color:red"></span>
                </div>

            </div>
            <div>
                <button class="reset" id="btnReset">Reset</button>
            </div>
            <div>
                <button class="filter" id="btnFilter">Fliter</button>
            </div>
        </div>
    </div>
    <div class="tab_data">
        <div class="tab_data1">
            <div class="main_transaction">
                <div class="text">
                    Employers
                </div>
                <div class="sec_transaction">
                    <div class="csvexport-container">
                        <button class="csvexport" id="btnExportToCSV">Export To CSV</button>
                    </div>
                    <!-- <div class="search_icon">
                        <button class="paycycle">Upload User List</button>
                        <img class="search-arrow" src="./images/arrow-line.png" alt="">
                    </div> -->
                    <div class="search_icon">
                        <input type="search" placeholder="Search" class="search" id="employerSearch">
                       
                        <img class="search-img" src="~/Content/images/search-line.svg" />
                    </div>
                    <div>
                    </div>
                </div>

            </div>

            <div class="over-flow">
                <table id="employerList" class="table-details">
                    <thead>
                        <tr>
                            <th class="table-head">S.No</th>
                            <th class="table-head">Company Name</th>
                            <th class="table-head">Email Id</th>
                            <th class="table-head">Phone Number</th>
                            <th class="table-head">Status</th>
                            <th class="table-head">Date</th>
                            <th class="table-head">Action</th>
                        </tr>
                    </thead>
                    <tbody id="employerList_body">
                       
                    </tbody>
                   
                </table>
            </div>

            <div class="card" id="noRecordFound">
                <div class="card-body" style="text-align:center">
                    No record found.
                </div>
            </div>

        </div>
    </div>

    <div class="pagination">
        <ul id="emplyr_pagination" class="pagination"></ul>
    </div>





</div>
<script src="/Content/js/Employer/Employer.js"></script>



