    @* END Logo *@
    @* BEGIN Header *@
    <nav class="navbar navbar-static-top" role="navigation" style="background-color:white !important">
        <a href="#" class="sidebar-toggle menu-icon" data-toggle="push-menu" role="button" style="text-decoration: none; color: #464646 !important">
