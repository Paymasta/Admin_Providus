<div class="modal fade" id="logoutModel" data-bs-backdrop="static">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content logoutBody">

            <div class="modal-header">
                <div class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </div>
            </div>
            <div class="modal-body ">
                <div class="mainBody">
                    <p class="logoutTitle">Are you sure you want to logout?</p>
                    <button type="button" class="btnLogout" id="btnLogout">Logout</button>
                </div>

            </div>
        </div>
    </div>
</div>
