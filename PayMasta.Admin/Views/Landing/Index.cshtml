
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>PayMasta</title>
    <link rel="shortcut icon" href="~/Content/img/pay-master-logo.png" type="image/x-icon">
