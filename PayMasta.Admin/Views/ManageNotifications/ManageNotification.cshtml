<style>
    .btnCancel {
        margin-bottom: 20px;
    }

    .manage-notification-checkobox-container {
        display: block !important;
        position: relative !important;
        padding-left: 35px !important;
        margin-bottom: 12px !important;
        cursor: pointer !important;
        font-size: 22px !important;
        -webkit-user-select: none !important;
        -moz-user-select: none !important;
        -ms-user-select: none !important;
        user-select: none !important;
    }

        /* Hide the browser's default checkbox */
        .manage-notification-checkobox-container input {
            position: absolute !important;
            opacity: 0 !important;
            cursor: pointer !important;
            height: 0 !important;
            width: 0 !important;
        }

    /* Create a custom checkbox */
    .checkmark {
        position: absolute !important;
        top: 0 !important;
        left: 0 !important;
        height: 18px !important;
        width: 18px !important;
        background-color: #eee !important;
        border-radius: 6px !important;
    }

    /* On mouse-over, add a grey background color */
    .manage-notification-checkobox-container:hover input ~ .checkmark {
        background-color: #ccc !important;
    }

    /* When the checkbox is checked, add a blue background */
    .manage-notification-checkobox-container input:checked ~ .checkmark {
        background-color: #F86847 !important;
    }

    /* Create the checkmark/indicator (hidden when not checked) */
    .checkmark:after {
        content: "" !important;
        position: absolute !important;
        display: none !important;
    }

    /* Show the checkmark when checked */
    .manage-notification-checkobox-container input:checked ~ .checkmark:after {
        display: block !important;
    }

    /* Style the checkmark/indicator */
    .manage-notification-checkobox-container .checkmark:after {
        left: 7px !important;
        top: 3.5px !important;
        width: 3px !important;
        height: 7px !important;
        border: solid white !important;
        border-width: 0 3px 3px 0 !important;
        -webkit-transform: rotate(45deg) !important;
        -ms-transform: rotate(45deg) !important;
        transform: rotate(45deg) !important;
    }

    .checkbox {
        margin-top: 0px;
        margin-bottom: 0px;
    }

        .checkbox label {
            padding-left: 0px;
        }
</style>
